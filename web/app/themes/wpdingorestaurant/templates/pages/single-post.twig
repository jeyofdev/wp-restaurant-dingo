{% extends "base.twig" %}

{% block body %}
    <section class="blog_area single-post-area section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 posts-list">
                    <div class="single-post">
                        <div class="feature-img">
                            <img class="img-fluid" src="{{ post.thumbnail.src | resize("post_thumbnail") }}" alt="">
                        </div>
                        <div class="blog_details">
                            <h2>{{ post.title }}</h2>
                            <ul class="blog-info-link mt-3 mb-4">
                                <li>
                                    <i class="far fa-user"></i>
                                    {{ category_by_post(post) | raw }}
                                </li>
                                <li><a href="#"><i class="far fa-comments"></i>{{ comments_number() }}</a></li>
                            </ul>
                            {{ post.content | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock body %}