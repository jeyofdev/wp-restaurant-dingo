{% if theme.theme_mod('video_toggle_setting', true) is same as (true) %}
    <section class="intro_video_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro_video_iner text-center">
                        <h2>{{ theme.theme_mod('video_title_setting', "Expect The Best") }}</h2>
                        <div class="intro_video_icon">
                            <a id="play-video_1" class="video-play-button popup-youtube" href="{{ theme.theme_mod('video_link_setting') }}">
                                <span class="ti-control-play"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endif %}
