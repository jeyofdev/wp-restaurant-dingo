{% extends "base.twig" %}

{% block body %}
    {% include "parts/breadcrumb.twig" with { "title": "Contact Us" } %}

    {% for post in posts %}
        <section class="contact-section section_padding">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2 class="contact-title">{{ post.title }}</h2>
                    </div>
                    <div class="col-lg-8">
                        {% filter shortcodes|raw %}
                            [contact-form-7 id="322" title="Contact" html_id="contactForm" html_class="form-contact contact_form"]
                        {% endfilter %}
                    </div>
                    <div class="col-lg-4">
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-home"></i></span>
                            <div class="media-body">
                                {{ format_address(contact.address)|raw }}
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                            <div class="media-body">
                                <h3>{{ contact.phone }}</h3>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-email"></i></span>
                            <div class="media-body">
                                <h3>{{ contact.email }}</h3>
                                <p>{{ __("Send us your query anytime!", "dingo") }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endfor %}
{% endblock body %}